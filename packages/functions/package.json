{
  "name": "@zm-blood-components/functions",
  "version": "1.0.0",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "clean": "rimraf ./lib && rimraf ./dist",
    "lint": "yarn run style && tslint --project tsconfig.json ",
    "compile": "tsc -p tsconfig.build.json",
    "build": "yarn run clean && yarn run lint && yarn run test && yarn run compile",
    "bundle": "yarn run build && webpack",
    "serve": "yarn run build && firebase emulators:start --only functions",
    "shell": "yarn run build && firebase functions:shell",
    "start": "yarn run shell",
    "logs": "firebase functions:log",
    "test": "jest --silent",
    "style": "yarn run prettier --write . "
  },
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "@zm-blood-components/common": "^1.0.0",
    "firebase-admin": "^9.7.0",
    "firebase-functions": "^3.13.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "copy-webpack-plugin": "^7.0.0",
    "firebase-functions-test": "^0.2.0",
    "generate-package-json-webpack-plugin": "^2.1.2",
    "ts-loader": "^8.0.14",
    "webpack": "^5.17.0",
    "webpack-cli": "^4.4.0",
    "webpack-node-externals": "^2.5.2"
  },
  "private": true
}
