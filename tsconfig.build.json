{
  "compilerOptions": {
    "outDir": "lib",
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": ["**/node_modules", "lib", "**/*.test.ts*"]
}
