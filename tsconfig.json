{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "lib",
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": false,
    "strict": true,
    "declaration": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["jest", "node",],
    "noUnusedLocals": false,
    "useUnknownInCatchVariables": false,
  },
  "exclude": ["**/node_modules", "lib", "**/*.test.ts*"]
}